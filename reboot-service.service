[Unit]
Description=Inpatient Display Reboot Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/gpa/inpatient-display
ExecStart=/usr/bin/node reboot-service.js
Restart=always
RestartSec=10
Environment=NODE_ENV=production
Environment=REBOOT_API_KEY=your-secure-api-key-here

[Install]
WantedBy=multi-user.target 